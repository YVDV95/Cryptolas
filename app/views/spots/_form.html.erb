<input id="geocomplete" type="text" placeholder="Type in an address" autocomplete="off">
<div class="auto-form">
	<%= simple_form_for(@spot, html: { class: 'form-inline' }) do |f| %>
		<%= f.input :street, input_html: { id: 'route' }, required: true %>
		<%= f.input :number, input_html: { id: 'street_number' }, required: true %>
		<%= f.input :city, input_html: { id: 'locality' }, required: true %>
		<%= f.input :state, input_html: { id: 'administrative_area_level_1' }, required: true %>
		<%= f.input :country, input_html: { id: 'country' }, required: true  %>
		<%= f.button :submit %>
	<% end -%>
</div>

<script>

$("#geocomplete").geocomplete({
  details: ".auto-form",
  detailsAttribute: "id"
});

</script>

